<section class="section is-medium">
  <h1 class="title">See Blog Posts</h1>
{{#each posts as |post|}}
  <div class ="card">
    <a href="/posts/{{id}}">
    <div class="card-header">
        <p class ="card-header-title">Posted by {{users.username}} on {{format_date}}</p>
    </div>
    <div class ="card-content">
        {{title}}
    </div>
    </a>
  </div>
{{/each}}
</section>